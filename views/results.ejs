<!DOCTYPE html>
<html>
<head>
	<title>Welcome</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<link rel="stylesheet" href="./css/main.css">
    <link rel="stylesheet" href="./css/results.css">

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap');
*{
    margin: 0;
    padding: 0;
    font-family: 'Quicksand', sans-serif;
}

.result-heading{
    margin: 3rem;
    margin-top: 4rem;
    text-align: center;
    font-size: 2.6rem;
}

.result-table{
    width: 80vw;
    margin: auto;
    text-align: left;
}

.result-table td, .result-table th {
    border: 1px solid #ddd;
    padding: 8px;
  }
  
.result-table tr:nth-child(even){background-color: #f2f2f2;}
.result-table tr:hover {background-color: #ddd;}
  
.result-table th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #6fd649;
    color: white;
  }

  
@import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap');
*{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}


input{
	text-align: center;
}
.mssg{
	margin-top: 5px;
	margin-bottom: 5px;
	border-radius: 5px;
}



body{
    /* background-color: rgba(0,0,0,0.05);; */
    font-family: 'Quicksand', sans-serif;
}

/* header home page */
.navbar{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.navbar-heading{
    font-size: 1.5rem;
    margin: .5rem;
    font-weight: bold;
}

.nav-menu{
    margin: 0;
    padding: 0;
    display: flex;
}

.nav-menu li{
    list-style: none;
}

.nav-links{
    text-decoration: none;
    padding: 1rem;
    display: block;
    color: black;
}

.nav-links:hover , .nav-links:active{
    background-color: #f2f2f2;
}

.menu-toggle{
    position: absolute;
    top: .75rem;
    right: 1rem;
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 21px;

}

.menu-toggle:hover , .menu-toggle:active{
    cursor: pointer;
}

.menu-toggle .bar{
    height: 3px;
    width: 100%;
    background-color: black;
    border-radius: 10px;
}




@media (max-width : 400px) {
    .menu-toggle{
        display: flex;
    }

    .navbar{
        flex-direction: column;
        align-items: flex-start;
    }

    .nav-menu{
        display: none;
        flex-direction: column;
        text-align: center;
        width: 100%;
    }

    .nav-links{
        padding: .5rem 1rem;
    }

    .active{
        display: flex !important;
    }

    .card{
        width: 65vw;
    }
}

    </style>
</head>
<body>
    <nav class="navbar">
        <div class="navbar-heading">PD Quiz</div>
        <div class="menu-toggle" id="mobile-nav">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
        </div>
        <ul class="nav-menu">
            <li><a href="/about" class="nav-links">About Us</a></li>
            <li class="abc">
                <a href="/logout" class="nav-links">Logout</a>
            </li>
        </ul>
    </nav>

	<h1 class="result-heading">Your Score is <%= score %>/<%= total %></h1>
    <table class="result-table">
    <tr>
        <th>Question No.</th>
        <th>Correct ans</th>
        <th>Your Answer</th>
    </tr>
    <% for (let i = 0;i<total; i++) { %>
        <tr>
        <td><%=i%></td>
        <td><%=correct[i] %> </td>
        <td><%= answers[i+1] %> </td>
        </tr>
        <% } %> 
    </table>
        <script src="./JS/main.js"></script>
</body>
</html>